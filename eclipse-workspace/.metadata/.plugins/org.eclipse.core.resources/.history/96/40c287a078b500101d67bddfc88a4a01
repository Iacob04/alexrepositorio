

package examen;

import java.util.Scanner;

public class Ejercicio_2 {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);

		System.out.println("Introduzca la cantidad que desea convertir");
		String cantidad = teclado.nextLine();
		
		while(cantidad.charAt(cantidad.length() - 1) != 'E' &&
			       cantidad.charAt(cantidad.length() - 1) != 'P' &&
			       cantidad.charAt(cantidad.length() - 1) != 'R' &&
			       cantidad.charAt(cantidad.length() - 1) != 'F' ) {
			
			System.out.println("Error al introducir una moneda indisponible");
			System.out.println("Introduzca la cantidad que desea convertir y el tipo de moneda a elegir entre (E, P, R, F)");
			 cantidad = teclado.nextLine();
			 
		}
		String numero = cantidad.substring(0, cantidad.length() - 1);
		double numero1 = Double.parseDouble(numero);
		double euroPesos = (27.93); 
		double euroRupias = (102.81); 
		double euroFrancos = (0.93); 
		

		char moneda = cantidad.charAt(cantidad.length() - 1);
		if (moneda == 'E') {
			System.out.println("La moneda utilizada es el Euro");
			System.out.println("La cantidad que desea convertir es : " + numero);
			System.out.println(numero1 + " equivalen a " + numero1*euroPesos + " pesos cubanos, " + numero1*euroRupias + " rupias o " + numero1*euroFrancos + " francos suizos");
		}
		
		else if (moneda == 'R') 
		{
			System.out.println("La moneda utilizada es la Rupia");
			System.out.println("La cantidad que desea convertir es : " + numero);
			System.out.println(numero1 + " rupias equivalen a " + numero1 / euroRupias + " euros");
			
			
		}
		
		else if (moneda == 'P') 
		{
			System.out.println("La moneda utilizada es el Peso Cubano");
			System.out.println("La cantidad que desea convertir es : " + numero);
			System.out.println(numero1 + " pesos equivalen a " + numero1 / euroPesos + " euros");
			
			
		}
		else 
		{
			System.out.println("La moneda utilizada es el Franco Suizo");
			System.out.println("La cantidad que desea convertir es : " + numero);
			System.out.println(numero1 + " francos equivalen a " + numero1 / euroFrancos + " euros");
			
			
		}
		
		

		teclado.close();
	
	}

}
