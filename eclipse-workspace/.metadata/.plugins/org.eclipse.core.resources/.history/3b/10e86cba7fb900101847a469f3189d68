
package clase;

import java.util.Scanner;

public class Clase_04_Noviembre {

	public static void main(String[] args) {

		System.out.println("Esto va en una línea\nY esto en la de abajo");
		String nombre = "Alexandru";
		String apellido = "Iacob";
		int edad = 21;
		double salario = 12345.568;
		
		System.out.printf("Tu nombre es %s %s tienes %d y cobras %.2f euros\n", nombre, apellido, edad, salario);
		
		System.out.println("Fin del programa");
		
		
		int n1 =345;
		int n2 =1245;
		int n3 =2;
		int n4 =32;
		
		System.out.printf("Ingresos:\n%5d€\n%5d€\n%5d€\n%5d€\n", n1,n2,n3,n4);
		System.out.printf("Ingresos:\n%-5d€\n%-5d€\n%-5d€\n%-5d€\n", n1,n2,n3,n4);
		System.out.printf("Ingresos:\n%05d€\n%05d€\n%05d€\n%05d€\n", n1,n2,n3,n4);
		
		double d1 = -345.12;
		double d2 = 1245.1;
		double d3 = 2.0;
		double d4 = -32.3456;
		
		System.err.printf("Ingresos:\n%+(9.3f€\n%+9.3f€\n%+9.3f€\n%+9.3f€\n", d1,d2,d3,d4);		
		
		
		double pi = 3.141593653;
		Scanner teclado = new Scanner(System.in);
		System.out.print("¿Cuantas cifras totales quieres que tenga?");
		int cifras = teclado.nextInt();
		System.out.print("¿Cuantas cifras decimales quieres que tenga?");
		int decimales = teclado.nextInt();
		
		String formato = "%" +cifras+ "."+decimales+"f";
		
		System.out.printf(formato);
		System.out.printf(formato, pi);
		teclado.close();
		
	}

}
