
package clase;

import java.util.Scanner;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class Ejercicio2_boletin8 {


	public static void main(String[] args) {
	
		 Scanner teclado = new Scanner(System.in);
		 System.out.print("Introduce una contraseña: ");
		
		 String patronNumeros = "[0-9]";
		 boolean correcto = false;
		 
		 while (correcto == false){
			 String contraseña = teclado.next();
			 if  (longitud(contraseña) == false) {
				 System.out.println("La contraseña es muy corta o demasiado larga, debe tener como mínimo 8 caracteres y como máximo 20");
				 
			 }
			 else {
				 if( mayusculas(contraseña)== false){
					 System.out.println("La contraseña debe de contener alguna mayuscula");
				 }
				 else {
					 if( caracteres(contraseña)== false) {
						 System.out.println("La contraseña debe contener algun crácter especial ( _, -, !, ?, *)");
					 }
				 }
			 }
			
			System.out.print("Vuelva a intentarlo: ");
			
		 }
		  		 
		 
		 
		 
		 
		 
		 teclado.close();
		 
	}

	static boolean longitud (String contraseña) {
		boolean si = true;
		if
		(contraseña.length()<8 || contraseña.length()>20)
		si = false;	
		return si;
	}


	static boolean mayusculas (String contraseña) {
		boolean si = true;
		Pattern mayusculas = Pattern.compile("[A-ZÑ]");
		Matcher mayusculasOK = mayusculas.matcher(contraseña);
		si = false;	
		return si;
	}
	static boolean caracteres (String contraseña) {
		boolean si = true;
		Pattern caracteres = Pattern.compile("[_-!?*]");
		Matcher caracteresOK = caracteres.matcher(contraseña);
		si = false;	
		return si;
	}
}