
package clase;

import java.util.Scanner;

public class Ejercicio2_boletin8 {


	public static void main(String[] args) {
	
		 Scanner teclado = new Scanner(System.in);
		 System.out.print("Introduce una contraseña: ");
		 String contraseña = teclado.next();
		 String patronNumeros = "[0-9]";
		 
		 while (longitud(contraseña) == false){
			 
			 System.out.println("La contraseña es muy corta o demasiado largo, debe tener como mínimo 8 caracteres y como máximo 20");
			 System.out.print("Vuelva a intentarlo: ");
			 contraseña = teclado.next();
		 }
		  		 
		 
		 
		 
		 
		 
		 teclado.close();
		 
	}

	static boolean longitud (String contraseña) {
		boolean si = true;
		if
		(contraseña.length()<8 || contraseña.length()>20)
		si = false;	
		return si;
	}
	
	
}